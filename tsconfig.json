{
  "compilerOptions": {
    "strictNullChecks": true,
    "moduleResolution": "none",
    "experimentalDecorators": true,
    "jsx": "React",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "target": "es6",
    "baseUrl": "./",
    "paths": {
      "src": ["src/*"]
    },
    "declaration": true,
    "declarationDir": "./types",
    "lib": [
      "dom",
      "es7"
    ],
    "types": ["classnames"]
  },
  "exclude": [
    "node_modules",
    "lib",
    "es"
  ]
}
